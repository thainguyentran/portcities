<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="location_form_view" model="ir.ui.view">
            <field name="name">location.form.view</field>
            <field name="model">pcs.warehouse.location</field>
            <field name="arch" type="xml">
                <form>
                    <group string="locations">
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="location_tree_view" model="ir.ui.view">
            <field name="name">location.tree.view</field>
            <field name="model">pcs.warehouse.location</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="pcs_warehouse_location_action" model="ir.actions.act_window">
            <field name="name">location</field>
            <field name="res_model">pcs.warehouse.location</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>